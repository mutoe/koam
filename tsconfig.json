{
  "exclude": [
    "**/build",
  ],
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["ESNext", "ES2019", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "inlineSourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "allowSyntheticDefaultImports": true,
  },
}
